{
    "root": {
        "src": "./",
        "dest": "./public/dist/"
    },
    "tasks": {
        "build": {
            "src": "src",
            "dest": "client",
            "extractSharedJs": true,
            "entries": {
                "app": [
                    "./index.js"
                ]
            },
            "extensions": [
                "js"
            ]
        },
        "scss": {
            "src": "scss",
            "dest": "client",
            "autoprefixer": {
                "browsers": [
                    "last 2 version"
                ]
            },
            "sass": {
                "indentedSyntax": true
            },
            "extensions": [
                "sass",
                "scss",
                "css"
            ]
        }
    }
}
